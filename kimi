#!/bin/bash
echo -e "\033[1;34m--- Kimi CLI Launcher ---\033[0m"
if command -v kimi &> /dev/null; then
    exec kimi "$@"
else
    echo -e "\033[33mKimi CLI not found in PATH.\033[0m"
    echo "Please install it using: npm install -g @moonshot-ai/kimi-cli"
    echo "Or configure your API keys in .env"
    bash
fi